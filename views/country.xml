<odoo>
    <data>
        <record id="viwe_travel_tour_agency_country_form" model="ir.ui.view">
            <field name="name">travel_tour_agency.city.form</field>
            <field name="model">travel_tour_agency.city</field>
            <field name="arch" type="xml">
                <form sample="1">
                    <sheet>
                        <group>
                            <group>
                                <field name="country_id" />
                            </group>
                            <group>
                                <field name="name" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="viwe_travel_tour_agency_city_tree" model="ir.ui.view">
            <field name="name">travel_tour_agency.city.tree</field>
            <field name="model">travel_tour_agency.city</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="country_id" />
                    <field name="name" />
                </tree>
            </field>
        </record>
        <record id="viwe_travel_tour_agency_country_search" model="ir.ui.view">
            <field name="name">travel_tour_agency.city.search</field>
            <field name="model">travel_tour_agency.city</field>
            <field name="arch" type="xml">
                <search>
                    <field name="country_id" />
                    <field name="name" />
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_travel_tour_agency_city_window">
            <field name="name">Cities</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">travel_tour_agency.city</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create first city!!!
                </p>
            </field>
        </record>
    </data>
</odoo>